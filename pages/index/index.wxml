<!--index.wxml-->
<view class="container">
  <map id="map" 
       longitude="{{longitude}}" 
       latitude="{{latitude}}"
       markers="{{markers}}" 
       controls="{{controls}}" 
       scale="14" 
       bindcontroltap="controltap" 
       bindmarkertap="markertap" 
       bindregionchange="regionchange" 
       show-location 
       style="width: 100%; height: 100%;"></map>
</view>
